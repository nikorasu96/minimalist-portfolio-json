---
import Section from "../Section.astro";

import { work } from "@/cv.json";
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights }) => {
          const start = new Date(startDate);
          const end = endDate != null ? new Date(endDate) : null;

          // Obtener a√±o y mes en formato abreviado (ej: "Jan")
          const startMonth = start.toLocaleString("default", {
            month: "short",
          });
          const startYear = start.getFullYear();
          const endMonth = end
            ? end.toLocaleString("default", { month: "short" })
            : null;
          const endYear = end ? end.getFullYear() : "Actual";

          const years = end
            ? `${startYear} ${startMonth} - ${endYear} ${endMonth}`
            : `${startYear} ${startMonth}  - Actual`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>

                  <time> {years}</time>
                </header>

                

                <footer>
                  <p>{summary}</p>
                </footer>
                
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
